# Configuration Fly.io pour Blunof
# Copiez ce fichier vers .env.local pour le développement local

# Environnement
NODE_ENV=production
PORT=8080

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBAPP_URL=https://your-app.fly.dev

# Base de données (si applicable)
DATABASE_URL=your_database_url_here

# API Keys
STRIPE_SECRET_KEY=your_stripe_key_here
PAYPAL_CLIENT_ID=your_paypal_id_here

# Cloud Storage
CLOUDFLARE_R2_ACCESS_KEY=your_r2_key_here
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_here
CLOUDFLARE_R2_BUCKET=your_bucket_name_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091

# Sécurité
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
